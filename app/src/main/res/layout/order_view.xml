<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="00dp"
        android:layout_marginTop="00dp"
        android:layout_marginEnd="00dp"
        android:layout_marginBottom="00dp"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <TextView
        android:id="@+id/list_sender_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/list_image"
        android:text="@string/list_sender_info" />

    <TextView
        android:id="@+id/list_receiver_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_sender_info"
        android:layout_toEndOf="@id/list_image"

        android:text="@string/list_receiver_info" />


</RelativeLayout>